extends layout

block head
    -title="Login"
    title #{title}
    link(rel="stylesheet", href="../style/index.css")
block content
    if(message)
        .container.mt-5
            .alert.alert-danger.error #{message}
    .container
        .card
            .card-body
                h3.text-center Account Login
                form(action='/user/login', method='post')
                    .form-group
                    label(for='email') Email
                    input.form-control(type='email', name='email', required='', autofocus='')
                    .form-group
                    label(for='password') Password
                    input.form-control(type='password', name='password', required='')
                    hr
                    button.btn.btn-primary(type='submit') Log In
                    hr
                    p Don't have an account 
                        a(href="/user/register") Register
    script(src="../scripts/error.js")
