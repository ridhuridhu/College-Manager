  block head
    -var title='Facebook'
    title #{title}
  body 
      nav
        ul.nav
          li
            a.nav-link(href='/')
              i.fa.fa-home(aria-hidden='true')  &nbsp;
              | Home 
          li
            a.nav-link(href='/profile')
              i.fa.fa-user(aria-hidden='true')  &nbsp;
              | Profile 
          -if(user){
            li
              a.nav-link(href='user/logout')
                i.fa.fa-sign-out(aria-hidden='true')  &nbsp;
                |  Logout 
          -}
          -else{
            li
              a.nav-link(href='user/login') 
                i.fa.fa-sign-in(aria-hidden='true')  &nbsp;
                |  Login 
          -}
         

      .container
        block content 
  br
  
  script(src="https://use.fontawesome.com/1767c78396.js")
